#moon 
    background: radial-gradient(#b6b8b7, black)

    div
        width: 400px
        height: 400px;
        background-image: radial-gradient(circle at center, #FFF9E3 60%, rgba(0, 0, 0, 0) 65%) // moon 
        background-size: 400px 400px
        background-position: 0px 0px
        margin-top: -(@height/2)
        left: calc(50% - 200px)
        background-repeat: no-repeat
        z-index: 5

        &:before
            width: 400px
            height: 400px
            background-repeat: no-repeat;
            margin-left: -(@width/2)
